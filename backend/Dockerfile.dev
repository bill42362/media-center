# Development Dockerfile for Backend

FROM node:20-alpine

WORKDIR /app

# Install ffmpeg for development
RUN apk add --no-cache ffmpeg

# Install dependencies (will be mounted in docker-compose.dev.yml)
COPY package*.json ./
RUN npm install

# Copy Prisma schema
COPY prisma ./prisma

# Generate Prisma Client
RUN npx prisma generate

EXPOSE 3000

CMD ["npm", "run", "dev"]
